@model IEnumerable<ProgrammeringAPL.Models.Project>

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> <!-- Inkluderar Bootstrap -->
</head>


<p>
    <a class="button" asp-action="Create">Skapa nytt</a> <!-- Länk för att skapa ett nytt projekt -->
</p>

<h1 class="text-center my-4">Mina projekt</h1>

<div class="container">
    <div class="row">
        @foreach (var project in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    @if (project.Gallery != null && project.Gallery.Any())
                    {
                        <!-- Visar första bilden från galleriet om det finns någon -->
                        <img src="@project.Gallery.First().ImagePath" class="card-img-top" alt="@project.Title">
                    }
                    else
                    {
                        <!-- Visar en platshållarbild om inget galleri finns, men alla projekt måste ha en bild vid skapande -->
                        <img src="~/images/placeholder.png" class="card-img-top" alt="No image available">
                    }


                    @* Kort för att visa upp projekten på ett snyggt sätt *@
                    <div class="card-body">
                        <h5 class="card-title">@project.Title</h5>
                        <p class="card-text">@project.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                @* Länkar för att hantera projektet *@
                                <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                            <small class="text-muted">@project.CreatedDate.ToShortDateString()</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>