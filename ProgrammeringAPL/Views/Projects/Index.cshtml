@model IEnumerable<ProgrammeringAPL.Models.Project>

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/dark-mode.css">
</head>
<h1>Project Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<h1 class="text-center my-4">My Projects</h1>

<div class="container">
    <div class="row">
        @foreach (var project in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    @if (project.Gallery != null && project.Gallery.Any())
                    {
                        <img src="@project.Gallery.First().ImagePath" class="card-img-top" alt="@project.Title">
                    }
                    else
                    {
                        <img src="~/images/placeholder.png" class="card-img-top" alt="No image available">
                    }

                    <div class="card-body">
                        <h5 class="card-title">@project.Title</h5>
                        <p class="card-text">@project.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                            <small class="text-muted">@project.CreatedDate.ToShortDateString()</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>