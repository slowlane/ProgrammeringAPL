@model ProgrammeringAPL.Models.ToDoItem

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link rel="stylesheet" href="~/css/todo.css">
    <link rel="stylesheet" href="~/css/forms.css">
</head>
<h1>Ta bort</h1>

<h3>Är du säker på att du vill ta bort den här?</h3>
<div id="todo">
    <h4>ToDo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Uppgift:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Task)
        </dd>
        <dt class = "col-sm-2">
            Utförd:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsComplete)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
