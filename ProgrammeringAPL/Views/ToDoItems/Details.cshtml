@model ProgrammeringAPL.Models.ToDoItem

@{
    ViewData["Title"] = "Details";
}
<head>
    <link rel="stylesheet" href="~/css/todo.css">
</head>
<h1>Detaljer</h1>

<div id="todo">
    <h4>ToDo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Uppgift:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Task)
        </dd>
        <dt class = "col-sm-2">
            Utförd:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsComplete)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
