@model ProgrammeringAPL.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet" href="~/css/carousel-style.css?v=1.0">
</head>

<div class="carousel-container">
    <div class="carousel">
        @foreach (var project in Model.Projects)
        {
            
            var firstImage = project.Gallery.FirstOrDefault();
            if (firstImage != null)
            {
                <div class="carousel-item">
                    
                    <img src="@firstImage.ImagePath" alt="@project.Title" tabindex="0">
                    
                    <div class="carousel-caption">
                        <a href="/Projects/Details/@project.Id">
                            <h3>@project.Title</h3>
                        </a>
                    </div>
                </div>
            }
        }
    </div>
</div>

<section id="projekt">
    <h2>Mina projekt</h2>
    <ul>
        @foreach (var project in Model.Projects)
        {
            <li>
                <strong>@project.Title</strong>: @project.Description
                <br />
                <a href="/Projects/Details/@project.Id" target="_blank">Projektlänk</a> |
                <a href="@project.RepositoryUrl" target="_blank">Repository</a>
            </li>
        }
    </ul>
</section>

<script src="~/js/script.js"></script>


